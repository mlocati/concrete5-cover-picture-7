<?xml version="1.0" encoding="UTF-8"?>
<schema
  xmlns="http://www.concrete5.org/doctrine-xml/0.5"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.concrete5.org/doctrine-xml/0.5 http://concrete5.github.io/doctrine-xml/doctrine-xml-0.5.xsd"
>

  <table name="btCoverPicture">
    <field name="bID" type="integer">
      <unsigned/>
      <key/>
    </field>
    <field name="content" type="text"/>
    <field name="fID" type="integer"/>
    <field name="overlayOpacity" type="decimal" size="10.2"/>
    <field name="overlayColor" type="string" size="20"/>
    <field name="overlayfID" type="integer"/>
  </table>

</schema>
